<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppProject.ContactUs"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            
            <!--Label and Image of Contacts-->
            <Label  Text="----Contact Us!----"
                    TextColor="Black"
                    BackgroundColor="LightGray"
                    FontSize="Large"
                    FontAttributes="Bold"
                    HorizontalOptions="CenterAndExpand"/>

            <Image Source="OtherPics/contact.png" 
                   HeightRequest="200" 
                   HorizontalOptions="CenterAndExpand"/>

            <!--Fields to enter-->
            <Entry  Placeholder="Name"
                    PlaceholderColor="#bababa" />
            
            <Entry  Placeholder="E-mail"
                    PlaceholderColor="#bababa" />
            
            <Entry  Placeholder="Comments..."
                    PlaceholderColor="#bababa" 
                    IsSpellCheckEnabled="True"
                    IsTextPredictionEnabled="True"/>
            
            <!--Button to contact-->
            <Button Clicked="Contact_Click"
                    Text="Contact"
                    BorderRadius="10"
                    VerticalOptions="StartAndExpand"/>

            <!--Make a line-->
            <Label HeightRequest="1" 
                   BackgroundColor="LightGray"/>
            
            <!-- Go back home -->
            <Button Clicked="HomePage"
                    Text="Home"
                    WidthRequest="70"
                    BorderRadius="10"
                    VerticalOptions="End"
                    HorizontalOptions="End"/>

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>