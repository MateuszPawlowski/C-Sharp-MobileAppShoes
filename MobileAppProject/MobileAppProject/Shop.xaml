<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppProject.Shop"
             BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                    <Label Text="Brands" 
                           FontSize="Large" 
                           FontFamily="Bold" 
                           HorizontalOptions="StartAndExpand"
                           TextColor="Black"/>

                    <Image Source="Brands/addidas.png" HeightRequest="130">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Adidas_Tap"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Button Text="Shop Adidas" 
                            Clicked="Adidas_Click" 
                            WidthRequest="200" 
                            HorizontalOptions="StartAndExpand"
                            BorderRadius="10"/>

                    <Label Text="&#x0a;"/>

                    <Image Source="Brands/puma.png" HeightRequest="130">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Puma_Tap"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Button Text="Shop puma" 
                            Clicked="Puma_Click" 
                            WidthRequest="200"
                            HorizontalOptions="StartAndExpand"
                            BorderRadius="10"/>

                    <Label Text="&#x0a;"/>

                    <Image Source="Brands/converse.png" HeightRequest="130">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Converse_Tap"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Button Text="Shop Converse" 
                            Clicked="Converse_Click" 
                            WidthRequest="200" 
                            HorizontalOptions="StartAndExpand"
                            BorderRadius="10"/>

                    <Label BackgroundColor="LightGray" 
                           HeightRequest="1" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="Center"/>

                </StackLayout>
                <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                    <Label Text=" " FontSize="Large" FontFamily="Bold"/>

                    <Image Source="Brands/nike.png" HeightRequest="130">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Nike_Tap"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Button Text="Shop Nike" 
                            Clicked="Nike_Click" 
                            WidthRequest="200" 
                            HorizontalOptions="End"
                            BorderRadius="10"/>

                    <Label Text="&#x0a;"/>

                    <Image Source="Brands/timberland.png" HeightRequest="130">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Timberland_Tap"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Button Text="Shop Timberlands" 
                            Clicked="Timberland_Click" 
                            WidthRequest="200" 
                            HorizontalOptions="End"
                            BorderRadius="10"/>

                    <Label Text="&#x0a;"/>

                    <Image Source="Brands/reebok.png" HeightRequest="130">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Reebok_Tap"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Button Text="Shop Reeboks" 
                            Clicked="Reebok_Click" 
                            WidthRequest="200" 
                            HorizontalOptions="End"
                            BorderRadius="10"/>


                    <Label BackgroundColor="LightGray" 
                           HeightRequest="1" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="Center"/>
                    
                    <!-- Go back home -->
                    <Button Clicked="HomePage"
                    Text="Home"
                    WidthRequest="70"
                    BorderRadius="10"
                    VerticalOptions="End"
                    HorizontalOptions="Center"/>
                </StackLayout>
            </StackLayout>
            

        </ScrollView>
    </ContentPage.Content>
</ContentPage>